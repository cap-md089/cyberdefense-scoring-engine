@page

@model EngineController.Pages.CompetitionTasks.DetailsModel

@{
    ViewData["Title"] = "Task Details";
}

<h1>Task Details</h1>

<div>
    <h4>Competition Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionTask.TaskName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitionTask.TaskName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionTask.SystemIdentifier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitionTask.SystemIdentifier)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionTask.Points)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitionTask.Points)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionTask.ScriptType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitionTask.ScriptType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionTask.ValidationScript)
        </dt>
        <dd class="col-sm-10" id="editor" style="min-height: 400px"></dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.CompetitionTask.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/monaco/loader.js"></script>
    <script src="~/js/editors.js"></script>
    <script>
        setupEditor({
            initialValue: @Html.Raw(Json.Serialize(Model.CompetitionTask.ValidationScript)),
            readonly: false
        })
    </script>
}
