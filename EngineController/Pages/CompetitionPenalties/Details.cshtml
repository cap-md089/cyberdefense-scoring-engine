@page

@model EngineController.Pages.CompetitionPenalties.DetailsModel

@{
    ViewData["Title"] = "Penalty Details";
}

<h1>Penalty Details</h1>

<div>
    <h4>Competition Penalty</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionPenalty.PenaltyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitionPenalty.PenaltyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionPenalty.SystemIdentifier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitionPenalty.SystemIdentifier)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionPenalty.Points)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitionPenalty.Points)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionPenalty.ScriptType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompetitionPenalty.ScriptType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompetitionPenalty.PenaltyScript)
        </dt>
        <dd class="col-sm-10" id="editor" style="min-height: 400px"></dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.CompetitionPenalty.ID">Edit</a> |
    <a asp-page="../CompetitionSystems/Details" asp-route-id="@Model.CompetitionPenalty.SystemIdentifier">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/monaco/loader.js"></script>
    <script src="~/js/editors.js"></script>
    <script>
        setupEditor({
            initialValue: @Html.Raw(Json.Serialize(Model.CompetitionPenalty.PenaltyScript)),
            readonly: false
        })
    </script>
}
